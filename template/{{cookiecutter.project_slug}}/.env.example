# Environment Configuration for {{ cookiecutter.project_name }}
# Copy this file to .env and fill in the values

# ===========================================
# PROJECT
# ===========================================
PROJECT_NAME={{ cookiecutter.project_slug }}
ENVIRONMENT=development
DEBUG=true

# ===========================================
# DATABASE
# ===========================================
{%- if cookiecutter.database == 'postgresql' %}
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=app
DB_PASSWORD=app_secret_change_me
DB_NAME={{ cookiecutter.project_slug }}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
{%- else %}
DB_TYPE=mongodb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=app
MONGODB_PASSWORD=app_secret_change_me
MONGODB_DB={{ cookiecutter.project_slug }}
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}
{%- endif %}

{%- if cookiecutter.use_redis == 'yes' %}

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
{%- endif %}

{%- if cookiecutter.auth_strategy == 'keycloak' %}

# ===========================================
# KEYCLOAK
# ===========================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM={{ cookiecutter.project_slug }}
KEYCLOAK_CLIENT_ID={{ cookiecutter.project_slug }}-web
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_change_me
{%- elif cookiecutter.auth_strategy == 'jwt_builtin' %}

# ===========================================
# JWT
# ===========================================
JWT_SECRET_KEY=your-super-secret-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
{%- endif %}

{%- if cookiecutter.use_temporal == 'yes' %}

# ===========================================
# TEMPORAL
# ===========================================
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
{%- endif %}

{%- if cookiecutter.landing_backend == 'wordpress_api' %}

# ===========================================
# WORDPRESS
# ===========================================
WORDPRESS_URL=http://localhost:8081
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_secret
WORDPRESS_DB_NAME=wordpress
{%- endif %}

# ===========================================
# API
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:4321

# ===========================================
# LOGGING
# ===========================================
{%- if cookiecutter.use_structured_logging == 'yes' %}
LOG_FORMAT=json
{%- else %}
LOG_FORMAT=text
{%- endif %}
LOG_LEVEL=INFO

# ===========================================
# SECURITY (NEVER COMMIT REAL VALUES!)
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-me-in-production
